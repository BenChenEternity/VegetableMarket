<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ajie.wiki.MarketManager.mapper.LevelMapper">
    <select id="getUserLevel" resultType="Integer">
        SELECT LEVEL
        FROM levels
        WHERE Name = "普通用户"
    </select>
    <select id="getVIPLevel" resultType="Integer">
        SELECT LEVEL
        FROM levels
        WHERE Name = "VIP"
    </select>
    <select id="getManagerLevel" resultType="Integer">
        SELECT LEVEL
        FROM levels
        WHERE Name = "管理员"
    </select>
    <select id="getOwnerLevel" resultType="Integer">
        SELECT LEVEL
        FROM levels
        WHERE Name = "所有者"
    </select>
</mapper>


